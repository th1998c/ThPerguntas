<%- include('./partials/header.ejs')%>

<body>
    <%- include('./partials/navbar.ejs')%>
    <div class="container">
        <hr>
        <h1> <%= pergunta.titulo %></h1>
        <p> <%= pergunta.descricao %></p>
        <hr>
        <form  method="post" action="/enviarresposta">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea name="corpo" placeholder="Digite sua resposta" class="form-control"></textarea><br>
            <input type="hidden" name="pergunta" value="<%=pergunta.id%>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
            <%
                resposta.forEach(function(resposta){
            %>
                <div class="card">
                    <div class="card-body">
                        <p> <%= resposta.corpo %></p>
                    </div>
                </div>
                <hr>              
            <%
                })
            %>
    </div>
</body>

<%- include('./partials/footer.ejs') %>